{
    "manifest_version":2,
    "name":"Extended Search",
    "version":"1.0",
    "description":"Extended Search description.",
    "icons":{
        "128":"img/icon128.png",
        "48":"img/icon48.png",
        "16":"img/icon16.png"
    },
    "browser_action":{
        "default_icon":"img/icon16.png",
        "default_popup":"popup/popup.html"
    },
    "options_page":"options/options.html",    
    "background": {
        "scripts": ["resources/js/jquery-3.3.1.min.js", "/resources/js/common.js", "background/background.js"],
        "persistent": false
    },
    "permissions":[
        "storage",
        "tabs",
        "contextMenus",
        "activeTab"
    ],"content_scripts":[
        {
            "matches":["http://*/*", "https://*/*"],
            "js": ["resources/js/jquery-3.3.1.min.js", "content/content.js"],
            "css": ["content/content.css"]
        }
    ]
}